<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ToDoList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ToDoList.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="All List">
            <ShellContent Title="All List" ContentTemplate="{DataTemplate local:GroceriesPage}" Route="GroceriesPage"/>
        </Tab>
    </TabBar>
</Shell>
